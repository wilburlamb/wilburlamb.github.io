{
  "$schema": "https://vega.github.io/schema/vega/v5.json",
  "description": "Chart of most expensive football transfers of all time.",
  "width": 310,
  "height": 200,
  "padding": 5,
  "title": {
        "text": "Most Expensive Association Football Transfers",
        "subtitle":["The 100 most expensive football transfers of all time (â‚¬millons)","Source: Goal.com"],
        "subtitleFontStyle":"italic",
        "subtitleFontSize":10,
        "anchor": "start",
        "color": "black" },

  "data": [
    {"name": "table",
    "url": "https://raw.githubusercontent.com/wilburlamb/wilburlamb.github.io/main/TRANSFERS1%20(1).csv",
    "format": {"type": "csv"},
      
      "transform": [
        {
          "type": "stack",
          "groupby": ["Year"],
          "sort": {"field": "Transfer Fee"},
          "field": "Transfer Fee"}]}],

  "scales": [
    {
      "name": "x",
      "type": "band",
      "range": "width",
      "domain": {"data": "table", "field": "Year"}
    },
    {
      "name": "y",
      "type": "linear",
      "range": "height",
      "nice": true, "zero": true,
      "domain": {"data": "table", "field": "y1"}
    },
    {
      "name": "color",
      "type": "ordinal",
      "range": "category",
      "domain": {"data": "table", "field": "Player"}
    }
  ],

  "axes": [
    {"orient": "bottom", "scale": "x", "zindex": 1, "labelAngle": -45},
    {"orient": "left", "scale": "y", "zindex": 1}
  ],

  "marks": [
    {
      "type": "rect",
      "from": {"data": "table"},
      "encode": {
        "enter": {
          "x": {"scale": "x", "field": "Year"},
          "width": {"scale": "x", "band": 1, "offset": -1},
          "y": {"scale": "y", "field": "y0"},
          "y2": {"scale": "y", "field": "y1"},
          "fill": {"scale": "color", "field": "Player"},
          "tooltip":{"field": "Player", "type": "nominal"}
        },
        "update": {
          "fillOpacity": {"value": 1}
        },
        "hover": {
          "fillOpacity": {"value": 0.5}
        
        }
      }
    }  
  ]
}