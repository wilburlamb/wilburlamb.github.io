{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "title": {
      "text": "Regression: Stock Prices of Adidas on McDonald's",
      "subtitle": "Price at close (US$) in World Cup Year (2022), Source: Yahoo Finance",
      "subtitleFontStyle": "italic",
      "subtitleFontSize": 10,
      "anchor": "start",
      "color": "#000000",
      "subtitleColor": "#000000"
    },
    "data": {
      "url": "https://raw.githubusercontent.com/wilburlamb/wilburlamb.github.io/main/LONGTERMSPONSORSTOCKS.csv"
    },
    "height": 300,
    "width": 295,
    "config": {"background": "#ffffff", "view": {"stroke": "transparent"}},
    "layer": [
      {
        "mark": {
          "type": "circle",
          "point": false,
          "clip": true,
          "color": "#d7b509"
        },
        "encoding": {
          "x": {
            "field": "MCD",
            "type": "quantitative",
            "title": "McDonald's (US$)",
            "axis": {
              "grid": false,
              "domainColor": "#000000",
              "labelColor": "#000000",
              "tickColor": "#000000",
              "gridColor": "black",
              "titleColor": "#000000"
            },
            "scale": {"domain": [210, 290]}
          },
          "y": {
            "field": "ADDYY",
            "type": "quantitative",
            "title": "Adidas (US$)",
            "axis": {
              "grid": false,
              "domainColor": "#000000",
              "labelColor": "#000000",
              "tickColor": "#000000",
              "gridColor": "black",
              "titleColor": "#000000"
            },
            "scale": {"domain": [40, 160]}
          },
          "tooltip": [
            {
              "field": "MCD",
              "type": "quantitative",
              "title": "McDonald's stock price"
            },
            {"field": "ADDYY",
             "type": "quantitative", 
             "title": "Adidas stock price"}
          ]
        }
      },
      {
        "mark": {"type": "line", "color": "#03bc38bb", "strokeWidth": 5},
        "transform": [{"regression": "ADDYY", "on": "MCD"}],
        "encoding": {
          "x": {
            "field": "MCD",
            "type": "quantitative",
            "scale": {"domain": [210, 290]}
          },
          "y": {
            "field": "ADDYY",
            "type": "quantitative",
            "scale": {"domain": [40, 160]}
          }
        }
      },
      {
        "transform": [
          {"regression": "ADDYY", "on": "MCD", "params": true},
          {"calculate": "'RÂ²: '+format(datum.rSquared, '.2f')", "as": "R2"}
        ],
        "mark": {
          "type": "text",
          "color": "#000000",
          "x": "width",
          "align": "right",
          "y": 0
        },
        "encoding": {"text": {"type": "nominal", "field": "R2"}}
      }
    ]
  }